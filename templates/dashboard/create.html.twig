{% extends 'dashboard/base.html.twig' %}
{% block title %}Создание статей{% endblock %}
{% block content %}
    <div class="row">

        <div class="col-xl-6">
            <div class="alert alert-danger" role="alert">
                Превышен лимит создания статей, чтобы снять лимит <a href="dashboard_subscription.html">Улучшите подписку</a>
            </div>
            <form>
                <div class="form-group">
                    <label for="fieldTheme">Тематика</label>
                    <select class="form-control" id="fieldTheme">
                        <option>-</option>
                        <option>Про еду</option>
                        <option>Про PHP</option>
                    </select>
                </div>
                <div class="form-label-group">
                    <input type="text" id="articleTitle" class="form-control" placeholder="Заголовок статьи" required="" autofocus="" value="Тестовая статья" disabled="">
                    <label for="articleTitle">Заголовок статьи</label>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p class="card-title">Ключевое слово</p>
                        <div class="form-label-group">
                            <input type="text" id="article0Word" class="form-control" placeholder="Ключевое слово" required="" disabled="" value="EXAMPLE">
                            <label for="article0Word">Ключевое слово</label>
                        </div>
                        <div class="form-label-group">
                            <input type="text" id="article1Word" class="form-control" placeholder="Родительный падеж" required="" disabled="" value="EXAMPLE">
                            <label for="article1Word">Родительный падеж</label>
                        </div>

                        ...

                        <div class="form-label-group">
                            <input type="text" id="article2Word" class="form-control" placeholder="Множественное число" required="" disabled="" value="EXAMPLES">
                            <label for="article2Word">Множественное число</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-label-group">
                            <input type="text" id="sizeFromField" class="form-control" placeholder="Размер статьи">
                            <label for="sizeFromField">Размер статьи от</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-label-group">
                            <input type="text" id="sizeToField" class="form-control" placeholder="До">
                            <label for="sizeToField">До</label>
                        </div>
                    </div>
                </div>


                <div class="card mb-4">
                    <div class="card-body">
                        <p class="card-title">Продвигаемые слова</p>
                        <div class="row">
                            <div class="col">
                                <div class="form-label-group">
                                    <input type="text" id="word1Field" class="form-control" placeholder="Продвигаемое слово">
                                    <label for="word1Field">Продвигаемое слово</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-label-group">
                                    <input type="text" id="word1CountField" class="form-control" placeholder="кол-во">
                                    <label for="word1CountField">кол-во</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-label-group">
                                    <input type="text" id="word2Field" class="form-control" placeholder="Продвигаемое слово">
                                    <label for="word2Field">Продвигаемое слово</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-label-group">
                                    <input type="text" id="word2CountField" class="form-control" placeholder="кол-во">
                                    <label for="word2CountField">кол-во</label>
                                </div>
                            </div>
                        </div>
                        ...
                    </div>
                </div>


                <div class="form-group">
                    <label for="exampleFormControlFile1">Изображения</label>
                    <input type="file" multiple="" class="form-control-file" id="exampleFormControlFile1">
                </div>

                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" disabled="">Создать</button>
            </form>
        </div>
    </div>
{% endblock %}