{% extends 'dashboard/base.html.twig' %}
{% block title %}История статей{% endblock %}
{% block content %}
    <table class="table table-hover table-bordered">
        <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
            <th scope="col">Просмотр</th>
        </tr>
        </thead>
        <tbody>
        {% for article in pagination %}
        <tr>
            <th scope="row">1</th>
            <td>{{ article.title }}</td>
            <td>{{ article.body|striptags|slice(0,50) ~ (article.body|striptags|length > 50 ? '...') }}</td>
            <td><a href="{{ path('app_dashboard_article', {slug: article.slug}) }}"><i class="fas fa-eye"></i></a> </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}